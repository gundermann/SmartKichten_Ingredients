<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/quantityPickerView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageButton
        android:id="@+id/quantityPickerIncreaseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/ic_action_collapse"
        android:contentDescription="@string/increaseValueDescription" />

    <TextView
        android:id="@+id/quantityPickerNextNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quantityNextDefaultNumber"
        android:textColor="#aaa"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/quantityPickerCurrentNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quantityCurrentDefaultNumber"
        android:textColor="#fff"
        android:maxLength="6"
        android:textSize="40sp" />

    <EditText
        android:id="@+id/quantityPickerCurrentQuantityInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:maxLength="6"
        android:selectAllOnFocus="true"
        android:text="@string/quantityCurrentDefaultNumber"
        android:textSize="40sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/quantityPickerPreviousNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quantityPreviousDefaultNumber"
        android:textColor="#aaa"
        android:textSize="25sp" />

    <ImageButton
        android:id="@+id/quantityPickerDecreaseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/ic_action_expand" 
        android:contentDescription="@string/decreaseValueDescription"/>
</LinearLayout>