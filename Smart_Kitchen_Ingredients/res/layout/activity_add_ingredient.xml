<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:title="@string/addIngredients"
    tools:context=".AddIngredientActivity" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ingredientName" />

    <EditText
        android:id="@+id/ingredientNameEdit"
        android:hint="@string/newIngredientHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:ems="10" >
    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/ingredientUnit" />

    <Spinner
        android:id="@+id/ingredientUnitSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:entries="@array/unit_array"
        android:prompt="@string/chooseUnit" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ingredientAmount" />

    <EditText
        android:id="@+id/ingredientAmountEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:digits="0123456789"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/submitNewIngredientButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/okButton" />

</LinearLayout>