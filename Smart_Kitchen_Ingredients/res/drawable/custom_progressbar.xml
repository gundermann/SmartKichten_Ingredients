<!-- Quelle: http://www.tiemenschut.com/how-to-customize-android-progress-bars/ Letzte Einsicht: 20.12.2013 -->
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="360" >

    <shape
        android:shape="oval"
        android:useLevel="false" >
        <size
            android:height="96dp"
            android:width="96dp" />

        <gradient
            android:centerY="0.50"
            android:endColor="#ff7e00"
            android:startColor="#fff"
            android:type="sweep"
            android:useLevel="false" />
    </shape>

</rotate>