<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.nordakademie.smart_kitchen_ingredients"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="de.nordakademie.smart_kitchen_ingredients.SHOPPING_LIST_CHANGING" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <permission
        android:name="de.nordakademie.smart_kitchen_ingredients.SHOPPING_LIST_CHANGING"
        android:description="@string/changeShoppingDataPermissionDescription"
        android:label="@string/changeShoppingDataPermissionLabel"
        android:permissionGroup="android.permission-group.PERSONAL_INFO"
        android:protectionLevel="normal" >
    </permission>

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="19" />

    <instrumentation
        android:name="android.test.InstrumentationTestRunner"
        android:targetPackage="de.nordakademie.smart_kitchen_ingredients" />

    <application
        android:name="de.nordakademie.smart_kitchen_ingredients.IngredientsApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="de.nordakademie.smart_kitchen_ingredients.shopping.AllShoppingListOverviewActivity"
            android:label="@string/title_activity_shopping"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.nordakademie.smart_kitchen_ingredients.stock.StockPrefsActivity"
            android:label="@string/menuInsertStoredItems"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="de.nordakademie.smart_kitchen_ingredients.collector.ShoppingListIngredientCollectorActivity"
            android:label="@string/ingredientCollector"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="de.nordakademie.smart_kitchen_ingredients.collector.ShoppingListRecipeCollectorActivity"
            android:label="@string/recipeCollector"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="de.nordakademie.smart_kitchen_ingredients.collector.StoredIngredientCollectorActivity"
            android:label="@string/title_activity_add_ingredient"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="de.nordakademie.smart_kitchen_ingredients.scheduling.ShoppingDateActivity"
            android:label="@string/title_activity_shoppingDate"
            android:screenOrientation="portrait" >
        </activity>

        <receiver android:name="de.nordakademie.smart_kitchen_ingredients.scheduling.ShoppingDateAlarmReceiver" >
        </receiver>
        <receiver android:name="de.nordakademie.smart_kitchen_ingredients.localdata.cache.NetworkReceiver" >
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

        <uses-library android:name="android.test.runner" />

        <activity
            android:name="de.nordakademie.smart_kitchen_ingredients.stock.StockOverviewActivity"
            android:label="@string/menuInsertStoredItems"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="de.nordakademie.smart_kitchen_ingredients.scheduling.ShoppingDateOverviewActivity"
            android:label="@string/title_activity_shoppingDateList"
            android:screenOrientation="portrait" >
        </activity>
        <activity android:name="de.nordakademie.smart_kitchen_ingredients.shopping.SingleShoppingListActivity"
            android:label="@string/title_activity_shoppingListIngredient"
            android:screenOrientation="portrait" >
        </activity>
        <activity android:name="de.nordakademie.smart_kitchen_ingredients.shopping.SmartKitchenIngredientsPrefsActivity" >
        </activity>

        <service android:name="de.nordakademie.smart_kitchen_ingredients.localdata.cache.CacheUpdaterService" >
        </service>
    </application>

</manifest>
